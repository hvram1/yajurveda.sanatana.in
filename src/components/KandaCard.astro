---
import { KANDA_NAMES, KANDA_NAMES_EN } from '../lib/utils';

interface Props {
  kanda: number;
  prasnaCount: number;
}

const { kanda, prasnaCount } = Astro.props;
const base = import.meta.env.BASE_URL;
---

<a 
  href={`${base}kanda/${kanda}`}
  class="block verse-card hover:shadow-xl transition-all hover:scale-[1.02] group"
>
  <div class="flex items-center gap-4">
    <div class="kanda-circle">
      {kanda}
    </div>
    <div>
      <h3 class="text-xl font-semibold text-indigo group-hover:text-primary transition-colors">
        {KANDA_NAMES[kanda]}
      </h3>
      <p class="text-sm text-gray-500">{KANDA_NAMES_EN[kanda]}</p>
      <p class="text-sm text-gray-600 mt-1">
        {prasnaCount} प्रश्नाः
      </p>
    </div>
  </div>
</a>
